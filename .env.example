# Local server
PORT=3000
NODE_ENV=development
APP_DEBUG=true

# Auth
# Use a long random string in production.
APP_COOKIE_SECRET=change-me

# Database
# Local dev uses SQLite by default.
# For DigitalOcean MySQL (recommended for production), set DATABASE_URL to your connection string.
# Example:
# DATABASE_URL=mysql://doadmin:{{DB_PASSWORD}}@HOST:25060/defaultdb?ssl-mode=REQUIRED
# Optional (recommended if you have the CA cert):
# MYSQL_SSL_CA="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
DATABASE_URL=

# SQLite (local dev fallback)
SQLITE_DB_PATH=./data/dodo-checks.sqlite

# Increase API
# Sandbox: https://sandbox.increase.com
# Production: https://api.increase.com
INCREASE_URL=https://sandbox.increase.com
INCREASE_API_KEY=
INCREASE_DEBUG=false

# Optional (recommended): used for Create Account
INCREASE_ENTITY_ID=sandbox_entity_9pa8cz3qp2nolvszu30w
INCREASE_PROGRAM_ID=sandbox_program_ym1rj0182z7itey4f10z
